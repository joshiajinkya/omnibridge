
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Log in</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.7 -->
    <link rel="stylesheet" href="../Content/assets/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="../Content/assets/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="../Content/assets/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="../Content/assets/css/AdminLTE.min.css">
    <!-- iCheck -->
    <link rel="stylesheet" href="../Content/assets/css/square/blue.css">

    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">

    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
    <script>
        function onSubmit(token) {

        }

        function validate(event) {
            event.preventDefault();
            if (!document.getElementById('UserName').value) {
                //validateLogin();
            } else {
                grecaptcha.execute();
            }
        }

        function onload() {
            var element = document.getElementById('submit');
            element.onclick = validateLogin;
        }

    </script>
</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <a href="#"><b>OmniBridge</b></a>
        </div>
        <!-- /.login-logo -->
        <div class="login-box-body">
            @if (ViewBag.Error != null)
            {
                <p class="login-box-msg" style="color:red;font-size:15px;">@ViewBag.Error</p>
            }
            <p class="login-box-msg">Sign in to start your session</p>
            <form action="@Url.Action("login", "account" )" method="post">
                <div class="form-group has-feedback">
                    <input class="form-control" type="text" autocomplete="off" placeholder="USERNAME" name="userid" id="username" required>
                    <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                    <span id="UserNameErr" style="color:red;"></span>
                </div>
                <div class="form-group has-feedback">
                    <input class="form-control" type="password" autocomplete="off" placeholder="PASSWORD" name="password" id="password" required>
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                    <span id="pwdErr" style="color:red;"></span>
                </div>
                <div class="row">
                    <div class="col-xs-8">
                        <div class="checkbox icheck">
                            <label>
                                <input type="checkbox"> Remember Me
                            </label>
                        </div>
                    </div>
                    <div class="col-xs-4">
                        <button type="submit" onclick="return validateLogin()" class="btn btn-primary btn-block btn-flat">Sign In</button>
                    </div>
                    <!-- /.col -->
                    <!-- /.col -->
                </div>
            </form>
            <div class="social-auth-links text-center">
                <a href="@Url.Action("Create", "Employee")" class="btn btn-block btn-social btn-facebook btn-flat">
                    ADD EMPLOYEE
                </a>
               
            </div>
            <!-- /.social-auth-links -->
          
        </div>
        <!-- /.login-box-body -->
    </div>
    <!-- /.login-box -->
    <!-- jQuery 3 -->
    <script src="../Content/assets/js/jquery.min.js"></script>
    <!-- Bootstrap 3.3.7 -->
    <script src="../Content/assets/js/bootstrap.min.js"></script>
    <!-- iCheck -->
    <script src="../Content/assets/js/icheck.min.js"></script>
    <script type="text/javascript">
        $(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' /* optional */
            });
        });

        function validateLogin() {
            var vl = true;
            if ($("#username").val() == "") {
                vl = false;
                $("#UserNameErr").html("Please enter UserName.");
                $("#username").focus();
            }
            else {
                $("#UserNameErr").html("");
                grecaptcha.execute();

            }
            if ($("#password").val() == "") {
                vl = false;
                $("#pwdErr").html("Please enter Password.");
                $("#password").focus();
            }
            else {
                $("#pwdErr").html("");
            }
            return vl;

        }
    </script>
</body>
</html>

